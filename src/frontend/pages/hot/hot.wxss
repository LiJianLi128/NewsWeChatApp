/* pages/hot/hot.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 页面头部 */
.page-header {
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 26rpx;
  color: #999999;
}

/* 新闻列表 */
.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 新闻项 */
.news-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  padding: 20rpx;
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.rank-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #999999;
}

.rank-top {
  color: #ff9900;
}

.news-content {
  flex: 1;
}

.news-title {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 15rpx;
}

.news-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.news-time {
  font-size: 24rpx;
  color: #999999;
}

.news-type {
  font-size: 24rpx;
  color: #00b26a;
  background-color: rgba(0, 178, 106, 0.1);
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.news-views {
  font-size: 24rpx;
  color: #ff9900;
}

/* 空状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  padding: 30rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}