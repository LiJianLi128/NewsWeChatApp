.container {
  padding: 10px;
}

.card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border: 1px solid #f0f0f0;
  margin-bottom: 10px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.text-container {
  flex: 1;
  padding-right: 10px;
}

.titles {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

.description {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
  display: -webkit-box;
  -webkit-line-clamp: 2; /* 显示两行 */
  -webkit-box-orient: vertical;
  overflow: hidden; /* 超出部分隐藏 */
  text-overflow: ellipsis;
}

.times {
  font-size: 10px;
  color: #999;
  margin-top: 6px;
}

.cover {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
}







/* 轮播样式 */
.swiper-box {
  width: 90%; /* 轮播图宽度 */
  height: 250px; /* 轮播图高度 */
  margin: 0 auto; /* 居中显示 */
  border-radius: 10px; /* 圆角效果 */
  overflow: hidden; /* 超出部分隐藏 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影效果 */
  position: relative; /* 使其相对定位 */
}

.swiper-item-box {
  position: relative;
  width: 100%;
  height: 100%;
}

.title {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  color: #fff; /* 白色文字 */
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  white-space: nowrap; /* 强制单行显示 */
  overflow: hidden; /* 超出部分隐藏 */
  text-overflow: ellipsis; /* 显示省略号 */
  z-index: 1;
}

.slide-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 10px; /* 圆角图片 */
}

/* 自定义指示点的样式 */
.swiper-box::after {
  content: '';
  position: absolute;
  bottom: 10px; /* 控制指示点距离底部的距离 */
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  gap: 5px;
}

.swiper-dots {
  width: 8px;
  height: 8px;
  background-color: rgba(255, 255, 255, 0.5); /* 默认半透明 */
  border-radius: 50%;
  transition: background-color 0.3s ease;
}

.swiper-dots-active {
  background-color: #ffffff; /* 当前激活状态变成白色 */
}


/* 时间显示样式 */
.time {
  position: absolute;
  bottom: 10px;
  right: 10px;
  padding: 5px;
  background-color: rgba(0, 0, 0, 0.5); /* 半透明背景 */
  color: #fff;
  font-size: 12px; /* 字体较小 */
  border-radius: 5px;
  z-index: 1;
  white-space: nowrap;
}




/* 搜索框 */
/* 搜索栏整体样式 */
.search-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 5px;
  background-color: #f5f5f5; /* 搜索栏背景颜色 */
  border-radius: 8px;
  margin: 10px;
}

/* 搜索输入框样式 */
.search-input {
  flex: 1;
  height: 40px;
  padding: 0 10px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
  background-color: #ffffff;
}

/* 搜索按钮样式 */
.search-button {
  flex: 0.17;
  margin-left: 10px;
  height: 40px;
  padding: 0 10px; /* 减少左右内边距 */
  background-color: #1aad19; /* 按钮背景颜色 */
  color: #fff;
  border: none;
  border-radius: 4px;
  font-size: 19px; /* 减小字体大小 */
  line-height: 40px;
  width: 60px; /* 限制按钮宽度 */
  text-align: center; /* 使文本水平居中 */
}


