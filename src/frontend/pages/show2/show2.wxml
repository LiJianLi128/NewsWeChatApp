<view class="search-bar">
  <input class="search-input" type="text" placeholder="请输入搜索内容" bindinput="onSearchInput" />
  <button class="search-button" bindtap="onSearch">搜索</button>
</view>

<view class="container">

<block wx:for="{{dataList}}" wx:key="index">
  <view class="card" bindtap="onCardTap" data-url="{{item.url}}">
    <!-- 左边放标题和内容 -->
    <view class="text-container">
      <!-- 标题 -->
      <view class="titles">{{index+1}}. {{item.title}}</view>
      <!-- 介绍内容 -->
      <view class="description">{{item.jieshao}}</view>
      <!-- 时间 -->
      <view class="times">时间: {{item.time}}</view>
    </view>

    <!-- 右边放图片 -->
    <image class="cover" src="{{item.imgurl}}" mode="aspectFill"></image>
  </view>
</block>

</view>
